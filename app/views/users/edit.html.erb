<div class="jumbotron">
	<h2 class="text-warning"> Edit user </h2>
	<%= form_for(@user) do |f| %>
		<%= render 'fields', :f => f %>
		<div class="actions"> <br />
			<%= f.submit"Update" %>
		</div>
	<% end %>
	<br /><br />
	<div>
		<%= gravatar_for @user %>
		<a href="http://gravatar.com/emails" target=_blank>change your gravatar</a>

	</div>
</div>