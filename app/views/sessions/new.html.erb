<div class="bs-docs-section" style="padding-top:60px">
	<div class="page-header">
		<h2 class="text-warning">
        	Sign In
        </h2>
    </div>
	<%= form_for(:session, :url => sessions_path) do |f| %>
	<div class="field">
		<%= f.label 		:email, :class => "control-label" %>
		<%= f.text_field 	:email, :placeholder => "Email id", :class => "form-control", :style => "width:230px" %>
	</div>
	<div class="field">
		<%= f.label 			:password, :class => "control-label" %>
		<%= f.password_field 	:password, :placeholder =>"Password", :class => "form-control", :style => "width:230px"%> 	
	</div>
	<div class="actions"><br />
		<%= f.submit "Sign in" %>
	</div>
	<% end %>
	<br /><br />
	<medium>New user ? <%= link_to "Sign up now !", signup_path %></medium>
</div>







